<?xml version="1.0" encoding="utf-8" ?>
<widget id="ListSorter.widget.ListSorter" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
    <name>ListSorter</name>
    <description>Add a header to your list view or template grid with interactive sorting on click.</description>

    <icon />

    <properties>
		<property key="headerLabel" type="string" required="true" defaultValue="My Header">
            <caption>Header Label</caption>
            <category>Appearance</category>
            <description>The label for this header.</description>
        </property>
		<property key="headerClass" type="string" required="false" defaultValue="">
            <caption>Header CSS Class</caption>
            <category>Appearance</category>
            <description>Zero or more CSS classes to apply to the header label. Uses spaces to separate.</description>
        </property>
        <property key="targetListName" type="string" required="true" defaultValue="">
            <caption>List Widget Name</caption>
            <category>Behavior</category>
            <description>The name of the list view or template grid to target</description>
        </property>
		<property key="listEntity" type="entity" required="true" >
            <caption>List Entity</caption>
            <category>Behavior</category>
            <description>The type of objects in the list.</description>
        </property>
		<property key="sortAttribute" type="attribute" entityProperty="listEntity" allowNonPersistableEntities="true" required="true">
			<caption>Sorting Attribute</caption>
			<category>Behavior</category>
			<description>The attribute to sort on the grid.</description>
			<attributeTypes>
				<attributeType name="Enum"/>
				<attributeType name="String"/>
				<attributeType name="Integer"/>
				<attributeType name="Decimal"/>
				<attributeType name="Boolean"/>
				<attributeType name="DateTime"/>
				<attributeType name="Long"/>
				<attributeType name="AutoNumber"/>
			</attributeTypes>
		</property>
    </properties>
</widget>
